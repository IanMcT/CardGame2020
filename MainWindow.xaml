<Window x:Class="CardGame2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame2020"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="24" Background="ForestGreen"
        WindowState="Maximized">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnHit" Click="btnHit_Click" Width="300">Hit</Button>
            <Button x:Name="btnStay" Click="btnStay_Click" Width="300">Stay</Button>
            <Button x:Name="btnDealNewHand" Click="btnDealNewHand_Click" 
                    Width="300">Deal new hand</Button>
        </StackPanel>
        <Canvas x:Name="canvas" Background="ForestGreen">
        </Canvas>
    </StackPanel>
</Window>
